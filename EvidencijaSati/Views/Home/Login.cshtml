@model EvidencijaSati.Models.Djelatnik
@using EvidencijaSati.Resources

 @Styles.Render("~/Content/login")

<div class="container">
	 <div class="row justify-content-center">
		  <div class="col col-3">
				@using (Html.BeginForm("AuthorizeUser", "Home", FormMethod.Post, new { @id = "frmLogin" }))
				{
		  				<div class="row">
		  	 				<div class="col">Email</div>
		  				</div>
		  				<div class="row">
		  	 				<div class="col">
								@Html.TextBoxFor(d => d.Email, new
									{ 
										  @type = "email",
										  @class = "form-control"
									})
						  </div>
		  				</div>
		  				<div class="row">
		  	 				<div class="col">@Login.Lozinka</div>
		  				</div>
		  				<div class="row">
		  	 				<div class="col">
									 @Html.TextBoxFor(d => d.Zaporka, new 
										  { 
												@type = "password",
												@class = "form-control"
										  })
								</div>
		  				</div>
		  				<div class="row">
		  	 				<div class="col">
									 <button class="btn btn-primary"
												id="btnLogin"
												type="submit">
													@Login.Prijava
											 </button>
							</div>
		  				</div>

				}

		  </div>
	 </div>
</div>